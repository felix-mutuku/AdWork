<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TopTrendy" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primo</item>
        <item name="colorPrimaryVariant">@color/primo</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/primo_two</item>
        <item name="colorSecondaryVariant">@color/primo_two</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/black</item>
        <!-- Customize your theme here. -->
        <item name="android:navigationBarColor">@color/primo</item>
    </style>

    <style name="FullscreenTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:actionBarStyle">@style/FullscreenActionBarStyle</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="FullscreenActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">#55000000</item>
    </style>

    <style name="RatingBar" parent="Theme.TopTrendy">
        <item name="colorControlActivated">@color/primo</item>
        <item name="colorControlNormal">@color/dark_gray</item>
    </style>
</resources>